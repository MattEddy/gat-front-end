<h2>Edit Email Data</h2>
<div class="edit-email">
  <div class="form-group">
    <label class="control-label">Email Name</label>
    {{input type="text" value=name class="form-control"}}
  </div>

  <div class="form-group">
    <div {{bind-attr class="hasError"}}>
      <label class="control-label">Example Data</label>
      {{textarea
        value=example_data_string
        action="validateJson"
        onEvent="key-press"
        bubbles=false
        class="form-control json-input"
      }}
    </div>
  </div>
  {{#if hasError}}
    <div class="alert alert-danger" role="alert">{{errorMessages.jsonError}}</div>
  {{/if}}

  <button class="btn btn-default" {{action 'save'}}>Save</button>
</div>
